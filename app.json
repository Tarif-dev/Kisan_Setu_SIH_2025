{
  "expo": {
    "name": "Kisan Setu",
    "slug": "kisan-setu",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kisansetu",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "Your intelligent farming companion for better crop management, weather insights, and agricultural guidance.",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sih2025.kisansetu"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1F2937"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sih2025.kisansetu",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.INTERNET",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      "expo-location",
      "expo-camera",
      "expo-media-library",
      "expo-av",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1F2937"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "agri-assist-sih2025"
      }
    }
  }
}
